<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <!-- Google Icon Fonts used by Materialize -->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Materialize CSS Framework -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <!-- JavaScript for Materialize -->
  
</head>

<body>
  <div class="card-panel teal lighten-2">
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper">
          <a href="/boats" class="brand-logo left">Boat list</a>
          <a href="/boats/new" class="brand-logo center">Add new boat</a>
          <ul class="right">
            <li>
              <% if (user) { %>
                <a href="/logout"><i class="material-icons right">trending_flat</i>Log Out</a>
                <% } else { %>
                  <a href="/auth/google"><i class="material-icons right">vpn_key</i>Login with Google</a>
                  <% } %>
                </li>
              </ul>
            </div>
          </nav>
        </div>
        <table id="list">
          <h1>boat</h1>
          <thead>
            <tr>
              <th>Draft</th>
              <th>Brand</th>
              <th>Length</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% boats.forEach(function(m) { %> 
              <tr>
                <td><%= m.draft %></td>
                <td><%= m.brand %></td>
                <td><%= m.length %></td>
                <td><a href="/boats/<%= m._id %>" class="btn">Details</a></td>
                <td><form action="/boats/<%= m._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button></form></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <img src="images/download.jpeg">
        </body>
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        </html>
        