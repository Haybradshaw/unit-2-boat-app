<!DOCTYPE html>
<html>

<head>
  <title>boat stuff</title>
  <!-- Google Icon Fonts used by Materialize -->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!-- Materialize CSS Framework -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="stylesheets/style.css" />
  <!-- JavaScript for Materialize -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>

<body>
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper">
        <a href="/boats" class="brand-logo left">Boat list</a>
        <a href="/boats/new" class="brand-logo center">Add new boat</a>
        <ul class="right">
          <li>
            <% if (user) { %>
                <a href="/logout"><i class="material-icons right">trending_flat</i>Log Out</a>
            <% } else { %>
                <a href="/auth/google"><i class="material-icons right">vpn_key</i>Login with Google</a>
            <% } %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
<table id="list">
  <h1>boat</h1>
    <thead>
      <tr>
        <th>Draft</th>
        <th>Brand</th>
        <th>Length</th>
      </tr>
    </thead>
    <% boats[0].forEach(function(m) { %> 
    <tbody>
        <tr>
          <td><%= m.draft %></td>
          <td><%= m.brand %></td>
          <td><%= m.length %></td>
          <td><form action="/boats/<%= m._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button></form></td>
        </tr>
      </tbody>
      <% }); %> 
    </table>
    <table id="list">
      <h1>motor</h1>
      <thead>
        <tr>
          <th>HP</th>
          <th>make</th>
          <th>cycle</th>
        </tr>
      </thead>
      <% boats[1].forEach(function(m) { %> 
      <tbody>
        <tr>
          <td><%= m.HP %></td>
          <td><%= m.make %></td>
          <td><%= m.cycle %></td>
          <td><form action="/boats/<%= m._id %>?_method=DELETE" method="POST">
            <button type="submit">X</button></form></td>
          </tr>
        </tbody>
        <% }); %> 
          </table>